<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_heightPercent="16%"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="20%"
        app:srcCompat="@mipmap/shujujiegou2" />

    <TextView
        android:id="@+id/itemTag1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/icon"
        android:gravity="center"
        android:textSize="10sp"
        app:layout_heightPercent="6%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="2.5%"
        app:layout_widthPercent="20%" />

    <TextView
        android:id="@+id/itemTag2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/icon"
        android:gravity="center"
        android:textSize="10sp"
        app:layout_heightPercent="6%"
        app:layout_marginLeftPercent="40%"
        app:layout_marginTopPercent="2.5%"
        app:layout_widthPercent="20%" />

    <TextView
        android:id="@+id/itemContent"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:textColor="#131313"
        android:textSize="12sp"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="8%"
        app:layout_widthPercent="40%" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="信誉值："
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="60%"
        app:layout_marginTopPercent="2.5%"
        app:layout_widthPercent="15%" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="95"
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="75%"
        app:layout_marginTopPercent="2.5%"
        app:layout_widthPercent="10%" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="[待解答]"
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="85%"
        app:layout_marginTopPercent="2.5%"
        app:layout_widthPercent="15%" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="赏金："
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="60%"
        app:layout_marginTopPercent="8%"
        app:layout_widthPercent="15%" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="15"
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="75%"
        app:layout_marginTopPercent="8%"
        app:layout_widthPercent="15%" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="浏览量："
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="60%"
        app:layout_marginTopPercent="14%"
        app:layout_widthPercent="15%" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="1111"
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="75%"
        app:layout_marginTopPercent="14%"
        app:layout_widthPercent="15%" />
    <TextView
        android:id="@+id/Acontent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

</androidx.percentlayout.widget.PercentRelativeLayout>