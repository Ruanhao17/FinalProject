<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="5%"
        app:srcCompat="@mipmap/shujujiegou2" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="10sp"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="15%" />

    <TextView
        android:id="@+id/itemContent"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:textColor="#131313"
        android:textSize="12sp"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="8%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/approved"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="赞同："
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="19%"
        app:layout_widthPercent="10%" />

    <TextView
        android:id="@+id/approvedNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="1111"
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginTopPercent="19%"
        app:layout_widthPercent="10%" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="浏览量："
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="30%"
        app:layout_marginTopPercent="19%"
        app:layout_widthPercent="15%" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="1111"
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="45%"
        app:layout_marginTopPercent="19%"
        app:layout_widthPercent="15%" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="评论："
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="60%"
        app:layout_marginTopPercent="19%"
        app:layout_widthPercent="15%" />

    <TextView
        android:id="@+id/commentNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="1111"
        android:textSize="12sp"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="75%"
        app:layout_marginTopPercent="19%"
        app:layout_widthPercent="15%" />
    <TextView
        android:id="@+id/Acontent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

</androidx.percentlayout.widget.PercentRelativeLayout>