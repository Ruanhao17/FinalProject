<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="#0003DAC5"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109"

        app:srcCompat="@mipmap/cat"
        tools:srcCompat="@mipmap/cat" />

    <TextView
        android:id="@+id/name"
        android:layout_width="51dp"
        android:layout_height="23dp"
        android:textSize="10sp"
        android:text="用户名"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintStart_toEndOf="@id/image"
        android:layout_marginLeft="7dp"
        />

    <TextView
        android:id="@+id/itemContent"
        android:layout_width="363dp"
        android:layout_height="70dp"
        android:textColor="#131313"
        android:textSize="12sp"
        android:text="内容"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/approved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赞同："
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/itemContent"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/itemContent"
         />

    <TextView
        android:id="@+id/approvedNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/approved"
        app:layout_constraintStart_toEndOf="@id/approved"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="浏览量："
        android:textSize="12sp"

        app:layout_constraintTop_toTopOf="@id/approved"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="1111"
        android:textSize="12sp"

        app:layout_constraintTop_toTopOf="@id/textView10"
        app:layout_constraintStart_toEndOf="@id/textView10"
        android:layout_marginLeft="5dp"
         />

    <TextView
        android:id="@+id/AnwserId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
<!--    <TextView-->
<!--        android:id="@+id/Acontent"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        />-->

</androidx.constraintlayout.widget.ConstraintLayout>